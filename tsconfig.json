{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "dist/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*.d.ts"
  ]
}